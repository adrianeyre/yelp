<div class="container page_box">
  <h1>
    <% if @restaurant.image.url != "" %>
        <%=link_to image_tag(@restaurant.image.url(:thumb)), @restaurant.image.url(:original), :popup=>['original_image', 'height=700,width=900'] %>
    <% end %>
    <%= @restaurant.name %>
  </h1>
  <h3>Average rating: <%= star_rating(@restaurant.average_rating) %></h3>
  <p><%= @restaurant.description %></p>
  <h3>Reviews</h3>
  <% @reviews.each do |review| %>
    <b>Thoughts:</b> <%= review.thoughts %><br>
    <b>Rating:</b> <%= star_rating(review.rating) %><br>
  <% end %>
  <br>
</div>
<div class="container page_box">
  <div class="inner option_div">
    <center><a href='/restaurants'>Restaurant list</a></center>
  </div>
</div>
